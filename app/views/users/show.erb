<h1><%= @user.first_name %> <%= @user.last_name %> Details: </h1>

<p>Age: <%= @user.age %></p>
<p>Artist Likes: <%= @user.likes %></p>
<p>Views: <%= @user.views %></p>
<p>Plays: <%= @user.plays %></p>
<p>Average of All Song Likes: <%= @user.average_song_likes_of_artist %></p>


<p>Songs:</p>
<% selected = @user_projects.select do |up| %>
  <% up.user_id == @user.id %>
<% end %>

<ul>
  <% selected.each do |select| %>
    <li><%= link_to(select.project.name, project_path(select.project)) %></li>
  <% end %>
</ul>

<%= button_to "Add a like", like_user_path(@user) %>

<%= link_to("View All Artists", users_path) %>

<h3>Highlights:</h3>

<p><%= link_to "Most Viewed Song", project_path(@user.most_viewed_songs) %></p>
<p><%= link_to "Most Liked Song", project_path(@user.most_liked_songs) %></p>
<p><%= link_to "Least Liked Song", project_path(@user.least_liked_songs) %></p>
<p><%= link_to "Least Viewed Song", project_path(@user.least_viewed_songs) %></p>
<p><%= link_to "Most Played Song", project_path(@user.most_played_songs) %></p>
<p><%= link_to "Least Played Song", project_path(@user.least_played_songs) %></p>


<%= button_to "Edit Profile", {action: "edit", method: :get} %>