  <h1 Hi <%= @user.first_name%>! Edit your profile using the menus below: </h1>



 if flash[:errors] %>
    <ul>
        <% flash[:errors].each do |error| %>
            <li> <%= error %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %> <br>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %> <br>

    <%= f.label :age %>
    <%= f.text_field :age %> <br>

   

    <%= f.submit "Update your profile" %>
<% end %>